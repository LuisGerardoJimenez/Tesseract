{%
	\bigskip\noindent {\large {\bf Trayectoria principal}\\}%
	\renewcommand{\varCurrentIdTray}{}%
	\renewcommand{\labelenumi}{\textcolor{black}{\bf \theenumi}}%
	\begin{enumerate}\addtolength{\itemsep}{-0.5\baselineskip}%
}%
